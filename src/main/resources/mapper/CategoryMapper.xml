    <!-- 查询物品类型列表-->
    <!-- 返回值类型:  List<HashMap<String, Object>> selectList -->
    <!-- 参数: -->
    <!--  @param keyword 关键词   -->
    <select id="selectList" resultType="java.util.HashMap">
        SELECT c.category_id as categoryId,
        c.category_name as categoryName,
        DATE_FORMAT(c.CREATED_TIME, '%Y-%m-%d %H:%i:%s') createdTime
        FROM category c
        where
        c.is_delete=0
        <if test="keyword!=null and keyword!=''">
            and CONCAT(c.category_name) like concat('%',#{keyword},'%')
        </if>
        order by c.CREATED_TIME desc
    </select>

    <!-- 根据物品类型名称查询物品类型-->
    <!-- 返回值类型:  Category selectByName -->
    <!-- 参数: -->
    <!--  @param categoryName 物品类型名   -->
    <select id="selectByName" resultType="xyz.slienceme.project_shop.dto.Category">
        SELECT c.category_id   as                               categoryId,
               c.category_name as                               categoryName,
               DATE_FORMAT(c.CREATED_TIME, '%Y-%m-%d %H:%i:%s') createdTime
        FROM category c
        where c.is_delete = 0
          and c.category_name = #{categoryName}
        order by c.CREATED_TIME desc
    </select>
