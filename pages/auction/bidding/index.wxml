<!--pages/auction/bidding/index.wxml-->
<image class="goods_img" mode="widthFix" src="{{goods.images[0]}}"></image>
<view class="cu-list menu">
  <view class="flex-sub text-center">
    <view class="solid-bottom text-xl padding">
      <text class="text-black text-bold">{{goods.goodsName}}</text>
    </view>
  </view>
  <view class="flex-sub">
    <view class="solid-bottom text-xl padding">
      <text class="text-black text-sm">{{goods.goodsInfo}}</text>
    </view>
  </view> 
  <view class="cu-item">
    <view class="text-xxl">
      <text class="text-black text-bold">{{state}}</text>
    </view>
    <view class="text-xl">
      <text class="text-black text-bold">{{date}}</text>
    </view>
  </view>
  <view class="cu-item">
    <view class="text-xl">
      起拍价：<text class="text-price text-red">{{auctions.startingPrice}}</text>
    </view>
  </view>
  <view class="cu-item">
    <view class="text-xl">
      当前最高报价：<text class="text-price text-red">{{auctions.presentPrice!=null?auctions.presentPrice:'0'}}</text>
    </view>
  </view>
  <!-- <view class="cu-item">
    <view class="text-xl">
      一口价：<text class="text-price text-red">{{auctions.fixedPrice}}</text>
    </view>
  </view> -->
  <view class="cu-form-group margin-top">
		<view class="title">报价</view>
		<input placeholder="请输入报价" bindinput="changeQuote" ></input>
  </view>
  <view class="padding flex flex-direction">
    <button class="cu-btn bg-green margin-tb-sm lg" bindtap="quote">报价</button>
  </view>
</view>
