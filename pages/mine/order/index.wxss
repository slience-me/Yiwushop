/* pages/mine/order/index.wxss */
page {
  background-color: #F0F0F0;
}
.active {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 25rpx 20rpx 10rpx 20rpx;
  margin: 20rpx;
  background-color: #ffffff;
  border-radius: 15rpx;
}
.active .banner image {
  width: 655rpx;
  height: 180rpx;
  border-radius: 15rpx;
}
.active .title {
  background-color: #ffffff;
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: #333333;
  line-height: 60rpx;
}
.active .under {
  background-color: #ffffff;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.active .under .time {
  font-size: 26rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: #999999;
  line-height: 34rpx;
}
.active .under .button {
  width: 125rpx;
  height: 44rpx;
  background: linear-gradient(176deg, #C3DDFF, #9FC8FF);
  border-radius: 12rpx;
  margin: 0 0 0 20rpx;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.active .under .button image {
  width: 21rpx;
  padding-right: 10rpx;
}
.active .under .button .text {
  font-size: 26rpx;
  font-family: PingFang SC;
  color: #FFFFFF;
  line-height: 34rpx;
}
.active .under .button::after {
  border: none;
}
.goodsName{
  width: 200rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
