/* pages/mine/goods/index.wxss */
.goods_img{
  width: 100vw;
}
.goods_info .goods_info_name {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--themeColor);
  padding: 10rpx ;
}
.btm_tools {
  border-top: 1rpx solid #ccc;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
}
.btm_tools .tools_item {
  background-color: #f37b1d;
  flex: 1;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  display: flex;
  position: relative;
}
.btm_tools .tools_item .item_content {
  font-size: 30rpx;
}
.btm_tools .tools_item button {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.btm_tools .tools_btn2 {
  flex: 1;
  font-size: 30rpx;
  background-color: var(--themeColor);
  font-weight: 600;
}
.width-sm{
  width: 100rpx;
}