<!--pages/message/index.wxml-->
<scroll-view class="page ">
  <view class="cu-bar bg-white solid-bottom margin-top">
    <view class="action">
      <text class="cuIcon-title text-orange "></text> 消息列表
    </view>
  </view>
  <view class="cu-list menu-avatar">
    <view class="cu-item" wx:for="{{dialogues}}" wx:key="userId" bindtap="skipTo" data-url="/pages/chat/index?oppositeId={{item.userId}}">
      <view class="cu-avatar round lg" style="background-image:url({{item.user.userAvatarurl}});">
        <view class="cu-tag badge" wx:if="{{item.msgNum>0}}">{{item.msgNum<100?item.msgNum:'99+'}}</view>
      </view>
      <view class="content">
        <view class="text-grey">
          <text class="text-cut">{{item.user.userName}}</text>
        </view>
        <view class="text-gray text-sm flex">
          <text class="text-cut">{{item.lateWord.msgType == 0?item.lateWord.msgContent:'[图片]'}}</text>
        </view>
      </view>
      <view class="action">
        <view class="text-grey text-xs">{{item.lateTime}}</view>
        <view class="cuIcon-noticefill text-gray"></view>
      </view>
    </view>
  </view>
</scroll-view>
